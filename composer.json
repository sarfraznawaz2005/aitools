{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "ext-curl": "*",
        "archtechx/enums": "^1.1",
        "embed/embed": "^4.4",
        "laravel/framework": "^11.9",
        "livewire/livewire": "^3.5",
        "lorisleiva/cron-translator": "^0.4.5",
        "nativephp/electron": "^0.6.5",
        "smalot/pdfparser": "^2.11",
        "spatie/laravel-markdown": "^2.5",
        "symfony/yaml": "^7.1"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0",
        "phpunit/phpunit": "^11.0.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan vendor:publish --force --tag=livewire:assets --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan vendor:publish --tag=livewire:assets --ansi --force",
            "cp ./public/assets/icon.png ./vendor/nativephp/electron/resources/js/resources/icon.png",
            "cp ./public/assets/icon.png ./vendor/nativephp/electron/resources/js/build/icon.png"
        ],
        "post-install-cmd": [
            "cp ./public/assets/icon.png ./vendor/nativephp/electron/resources/js/resources/icon.png",
            "cp ./public/assets/icon.png ./vendor/nativephp/electron/resources/js/build/icon.png"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
